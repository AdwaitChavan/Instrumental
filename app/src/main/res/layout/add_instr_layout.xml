<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_addimage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/addimage_icon"
        android:fontFamily="@font/actor"
        android:stateListAnimator="@android:anim/fade_in"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Browse locally to add image"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_okay"
        android:layout_width="86dp"
        android:layout_height="82dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/okay_icon"
        android:fontFamily="@font/actor"
        android:stateListAnimator="@android:anim/fade_in"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="86dp"
        android:layout_height="82dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/cancel_icon"
        android:fontFamily="@font/actor"
        android:stateListAnimator="@android:anim/fade_in"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/borrow_main_chat"
        android:layout_width="72dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_icon"
        android:fontFamily="@font/actor"
        android:stateListAnimator="@android:anim/fade_in"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextMultiLine8"
        android:layout_width="268dp"
        android:layout_height="46dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="86dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="Other:"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/editTextTextMultiLine7"
        android:layout_width="263dp"
        android:layout_height="46dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="89dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="Weight:"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/editTextTextMultiLine5"
        android:layout_width="261dp"
        android:layout_height="46dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="93dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Brand:"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editTextTextMultiLine4"
        android:layout_width="72dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="to $"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/editTextTextMultiLine3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Price Range: $"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="77dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="Type:"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/editTextTextMultiLine3"
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine2" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="272dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAlignment="textStart"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/btn_addimage" />
</androidx.constraintlayout.widget.ConstraintLayout>